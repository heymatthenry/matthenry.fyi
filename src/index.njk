---
title: Home
layout: home.njk
---

{%- for post in collections.post | reverse -%}
	<article>
	  <h2>
		  {% if 'link' in post.data.tags %}
        <a href="{{ post.data.link_url }}">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" className="w-6 h-6">
          <path strokeLinecap="round" strokeLinejoin="round" d="M13.19 8.688a4.5 4.5 0 0 1 1.242 7.244l-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244" />
        </svg>
          {{ post.data.title }} <span class="arrow">&rarr;</span>
        </a>
		  {% elseif 'til' in post.data.tags %}
			<abbr title="Today I learned">TIL</abbr> <a href="{{ post.url | url }}">{{ post.data.title }}</a>
		  {% else %}
		     <a href="{{ post.url | url }}">{{ post.data.title }}</a>
		  {% endif %}
	  </h2>
	  {{ post.content | safe }}
	  <p class="post-date">Originally written on <time datetime="{{ post.date | timestamp }}">{{ post.date | postDate }}</time></p>
	</article>
{%- endfor -%}
